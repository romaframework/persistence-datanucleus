<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
  version="1.0">

	<persistence-unit name="default">
		<mapping-file>#{project.package-path}/domain/entity/package.jdo</mapping-file>

		<properties>
			<property name="datanucleus.ConnectionDriverName" value="org.hsqldb.jdbcDriver" />
			<property name="datanucleus.ConnectionURL" value="jdbc:hsqldb:file:database/testdb" />
			<property name="datanucleus.ConnectionUserName" value="sa" />
			<property name="datanucleus.ConnectionPassword" value="" />
		</properties>
	</persistence-unit>

</persistence>
